{% extends "templates/app.twig" %}

{% block naslov %}
<h1>Izmena podataka kamate</h1>
<hr>
<form action="{{ path_for('kamate.izmena.post') }}" method="POST" class="uk-form-stacked">
	{{ csrf|raw }}
	<input type="hidden" value="{{ kamata.id }}" name="id" id="id">
	<div uk-grid>
		<div class="uk-width-1-2@m">
		<label for="datum" class="uk-form-label">Datum:</label>
		<div class="uk-form-controls">
			<input type="date" name="datum" id="datum" value="{{ old.datum ? : kamata.datum }}"
				class="uk-input{{ errors.datum[0] ? ' uk-form-danger': ''}}" autocomplete="off" required>
		</div>
		<small class="uk-text-danger">{{ errors.datum[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-2@m">
		<label for="procenat" class="uk-form-label">Procenat:</label>
		<div class="uk-form-controls">
			<input type="number" name="procenat" id="procenat" class="uk-input{{ errors.procenat[0] ? ' uk-form-danger': ''}}"
				value="{{ old.procenat ? : kamata.procenat }}" min="0" step="0.000001" autocomplete="off" required>
		</div>
		<small class="uk-text-danger">{{ errors.procenat[0] ? :'' }}</small>
	</div>
	</div>
	<div uk-grid>
	<div class="uk-button-group uk-width-1-3@m">
		<button class="uk-button uk-button-primary uk-width-1-2"><span uk-icon="check"></span> Snimi</button>
		<a href="{{ path_for('kamate') }}" class="uk-button uk-button-secondary uk-width-1-2">
			<span uk-icon="ban"></span> Otka≈æi
		</a>
	</div>
</div>
</form>
{% endblock naslov %}
