{% extends "templates/app.twig" %}

{% block naslov %}
<h1>Izmena podataka o korisniku</h1>
<hr>
<form action="{{ path_for('korisnici.izmena.post') }}" method="POST" class="uk-form-stacked">
	{{ csrf|raw }}
	<input type="hidden" value="{{ korisnik.id }}" name="id" id="id">
	<div uk-grid>
	<div class="uk-width-1-3">
		<label for="ime" class="uk-form-label">Ime i prezime</label>
		<div class="uk-form-controls">
			<input type="text" name="ime" id="ime" class="uk-input{{ errors.ime[0] ? ' uk-form-danger': ''}}" value="{{ old.ime ? : korisnik.ime }}"
			 autocomplete="off" required>
		</div>
		<small class="uk-text-danger">{{ errors.ime[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-3">
		<label for="korisnicko_ime" class="uk-form-label">Nalog</label>
		<div class="uk-form-controls">
			<input type="text" name="korisnicko_ime" id="korisnicko_ime" value="{{ old.korisnicko_ime ? : korisnik.korisnicko_ime }}" class="uk-input{{ errors.korisnicko_ime[0] ? ' uk-form-danger': ''}}"
			 autocomplete="off" required>
		</div>
		<small class="uk-text-danger">{{ errors.korisnicko_ime[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-3">
		<label for="nivo" class="uk-form-label">Prava korisnika:</label>
		<div class="uk-form-controls">
			<select name="nivo" id="nivo" class="uk-select{{ errors.nivo[0] ? ' uk-form-danger': ''}}" required>
				<option value="10" {{ (old.nivo == "10" or korisnik.nivo == "10") ? ' selected' : '' }}>Korisnik</option>
                <option value="0" {{ (old.nivo == "0" or korisnik.nivo == "0") ? ' selected' : '' }}>Administrator</option>
			</select>
		</div>
		<small class="uk-text-danger">{{ errors.nivo[0] ? :'' }}</small>
	</div>
</div>
<div uk-grid>
<div class="uk-width-1-3">
	<p class="uk-text-warning">* U slučaju da ne želite da promenite lozinku korisnika polja ostavite prazna.</p>
</div>
	
		 <div class="uk-width-1-3">
            <label class="uk-form-label" for="lozinka">Lozinka:</label>
            <div class="uk-form-controls">
            <input type="password" placeholder="Lozinka" id="lozinka" name="lozinka" autocomplete="new-password">
        </div>
        </div>

        <div class="uk-width-1-3">
            <label class="uk-form-label" for="lozinka_potvrda">Lozinka potvrda:</label>
            <div class="uk-form-controls">
            <input type="password" placeholder="Lozinka potvrda" id="lozinka_potvrda" name="lozinka_potvrda" autocomplete="new-password">
            <span id='poruka'></span>
        </div>
        </div>
	</div>
	<div uk-grid>
	<div class="uk-button-group uk-width-1-5">
		<button class="uk-button uk-button-primary uk-width-1-2"><span uk-icon="check"></span> Snimi</button>
		<a href="{{ path_for('korisnici') }}" class="uk-button uk-button-secondary uk-width-1-2">
			<span uk-icon="ban"></span> Otkaži
		</a>
	</div>
</div>
</form>
{% endblock naslov %}
