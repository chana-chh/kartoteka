{% extends "templates/app.twig" %}

{% block sadrzaj %}
<h1 class="uk-heading-divider">
Mape u upotrebi
</h1>


    <table class="uk-table uk-table-divider uk-table-striped uk-table-hover uk-table-small">
        <thead>
            <tr>
                <th class="uk-table-shrink">Id</th>
                <th>Groblje</th>
                <th>Parcela</th>
                <th class="uk-table-expand">Naziv mape</th>
                <th>Mapa</th>
            </tr>
        </thead>
        <tbody>
            {% for mapa in mape.data %}
            <tr>
                <td><em>{{ mapa.id }}</em></td>
                <td>{{ mapa.groblje.naziv }}</td>
                <td>{{ mapa.parcela }}</td>
                <td><strong>{{ mapa.veza }}</strong></td>
                <td><img class="uk-border-rounded" src="{{ base_url() }}/img/Mape/{{ mapa.veza }}" width="150" alt="Mapa"></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
<div class="uk-flex uk-flex-between uk-margin-top">
  <div>{{ mape.links.buttons | raw }}</div>
  <div>Idi na stranu {{ mape.links.select | raw }}</div>
  <div>
    <p>
      Prikazani redovi od
      <em>{{ mape.links.row_from }}</em> do
      <em>{{ mape.links.row_to }}</em> od ukupno
      <em>{{ mape.links.total_rows }}</em>
    </p>
  </div>
</div>
{% endblock sadrzaj %}

{% block traka %}

    <form action="" method="POST" enctype="multipart/form-data" class="uk-background-muted uk-margin-top uk-padding-small">
        {{ csrf|raw }}
    <fieldset class="uk-fieldset">

        <legend class="uk-legend">Dodavanje nove mape</legend>

        <div class="uk-margin">
            <select name="groblje_id" id="groblje_id" class="uk-select uk-width-2-3">
               {% for groblje in groblja %}
                    <option value="{{ groblje.id }}">{{ groblje.naziv }}</option>
                {% endfor %}
            </select>
        </div>

        <div uk-form-custom="target: true">
            <input type="file" id="slika" class="uk-width-1-3">
            <input class="uk-input uk-width-2-3" type="text" placeholder="Odaberi mapu" disabled>
        </div>
        <hr class="uk-margin">
        <div class="uk-margin uk-float-right">
        <input type="submit" value="Sačuvaj" class="uk-button uk-button-primary uk-button-small">
        <a href="{{ path_for('mape')}}" class="uk-button uk-button-secondary uk-button-small">Otkaži</a>
        </div>

    </fieldset>
</form>
{% endblock traka %}
