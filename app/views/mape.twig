{% extends "templates/app.twig" %}

{% block sadrzaj %}
<h1 class="uk-heading-divider">
Mape u upotrebi
</h1>


    <table class="uk-table uk-table-divider uk-table-striped uk-table-hover uk-table-small">
        <thead>
            <tr>
                <th class="uk-table-shrink">Id</th>
                <th>Groblje</th>
                <th>Parcela</th>
                <th class="uk-table-expand">Naziv mape</th>
                <th>Mapa</th>
            </tr>
        </thead>
        <tbody>
            {% for mapa in mape.data %}
            <tr>
                <td><em>{{ mapa.id }}</em></td>
                <td>{{ mapa.groblje.naziv }}</td>
                <td>{{ mapa.parcela }}</td>
                <td><strong>{{ mapa.veza }}</strong></td>
                <td><img class="uk-border-rounded" src="{{ base_url() }}/img/Mape/{{ mapa.veza }}" width="150" alt="Mapa"></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

<div class="flex-row">
    <div class="flex-col-4">{{ mape.links.buttons|raw }}</div>
    <div class="flex-col-1">Idi na stranu {{ mape.links.select|raw }}</div>
    <div class="flex-col-2" style="text-align: right;">
        <p>
            Prikazani redovi od
            <strong>{{ mape.links.row_from }}</strong> do <strong>{{ mape.links.row_to }}</strong>
            od ukupno <strong>{{ mape.links.total_rows }}</strong>
        </p>
    </div>
</div>
{% endblock sadrzaj %}

{% block traka %}
<div uk-grid class="uk-background-muted uk-margin-top">
    <form action="" method="POST" enctype="multipart/form-data">
        {{ csrf|raw }}
    <fieldset class="uk-fieldset">

        <legend class="uk-legend">Dodavanje nove mape</legend>

        <div class="uk-margin">
            <select name="groblje_id" id="groblje_id" class="uk-select uk-form-width-medium">
               {% for groblje in groblja %}
                    <option value="{{ groblje.id }}">{{ groblje.naziv }}</option>
                {% endfor %}
            </select>
        </div>

        <div uk-form-custom="target: true">
            <input type="file" id="slika">
            <input class="uk-input uk-form-width-medium" type="text" placeholder="Odaberi mapu" disabled>
        </div>
        <hr class="uk-margin">
        <div class="uk-margin uk-float-right">
        <input type="submit" value="Sačuvaj" class="uk-button uk-button-primary uk-button-small">
        <a href="{{ path_for('mape')}}" class="uk-button uk-button-secondary uk-button-small">Otkaži</a>
        </div>

    </fieldset>
</form>
</div>
{% endblock traka %}
