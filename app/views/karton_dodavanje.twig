{% extends "templates/app.twig" %}

{% block naslov %}
<h1>Dodavanje novog kartona</h1>
<hr>

<form action="{{ path_for('kartoni.dodavanje') }}" method="POST" class="uk-form-stacked" uk-grid>
	{{ csrf|raw }}
	<div class="uk-width-1-6">
		<label for="groblje_id" class="uk-form-label">Groblje</label>
		<div class="uk-form-controls">
			<select name="groblje_id" id="groblje_id" class="uk-select" required>
				{% for groblje in groblja %}
				<option value="{{ groblje.id }}">{{ groblje.naziv }}</option>
				{% endfor %}
			</select>
		</div>
		<small class="uk-text-danger"></small>
	</div>
	<div class="uk-width-1-6">
		<label for="parcela" class="uk-form-label">Parcela</label>
		<div class="uk-form-controls">
			<input type="text" name="parcela" id="parcela" class="uk-input" autocomplete="off" required>
		</div>
		<small class="uk-text-danger"></small>
	</div>
	<div class="uk-width-1-6">
		<label for="grobno_mesto" class="uk-form-label">Grobno mesto</label>
		<div class="uk-form-controls">
			<input type="text" name="grobno_mesto" id="grobno_mesto" class="uk-input" autocomplete="off" required>
		</div>
		<small class="uk-text-danger"></small>
	</div>
	<div class="uk-width-1-6">
		<label for="broj_mesta" class="uk-form-label">Broj mesta</label>
		<div class="uk-form-controls">
			<input type="number" name="broj_mesta" step="1" id="broj_mesta" class="uk-input" autocomplete="off" value="1" min="1"
			 required>
		</div>
		<small class="uk-text-danger"></small>
	</div>
	<div class="uk-width-1-6">
		<label for="tip_groba" class="uk-form-label">Tip groba</label>
		<div class="uk-form-controls">
			<select name="tip_groba" id="tip_groba" class="uk-select" required>
				{% for tip in tipovi %}
				<option value="{{ tip }}">{{ tip }}</option>
				{% endfor %}
			</select>
		</div>
		<small class="uk-text-danger"></small>
	</div>
	<div class="uk-width-1-6">
		<label for="stanje" class="uk-form-label">Stanje</label>
		<div class="uk-form-controls">
			<input type="number" name="stanje" step="0.01" id="stanje" class="uk-input" autocomplete="off" value="0.00" min="0"
			 required>
		</div>
		<small class="uk-text-danger"></small>
	</div>

	<div class="uk-width-5-6">
		<label for="napomena" class="uk-form-label">Napomena</label>
		<div class="uk-form-controls">
			<textarea class="uk-textarea" rows="5" name="napomena" id="napomena"></textarea>
		</div>
	</div>

	<div class="uk-width-1-6">
		<div class="uk-form-controls uk-margin-top">
			<label><input class="uk-checkbox" type="checkbox" name="aktivan" checked> Aktivan</label>
		</div>
	</div>

	<div class="uk-button-group uk-width-1-5">
		<button class="uk-button uk-button-primary uk-width-1-2"><span uk-icon="check"></span> Snimi</button>
		<a href="{{ path_for('kartoni') }}" class="uk-button uk-button-secondary uk-width-1-2"><span uk-icon="ban"></span>
			Otka≈æi</a>
	</div>
</form>

{% endblock naslov %}
