        <li><a href="{{ path_for('uputstvo') }}"><span uk-icon="question"></span> Uputstvo</a></li>
        <li><a href="{{ path_for('uputstvo.kartoni') }}"><span uk-icon="file"></span> Kartoni</a></li>
        <li><a href="{{ path_for('uputstvo.staraoci') }}"><span uk-icon="users"></span> Staraoci</a></li>
        <li><a href="{{ path_for('uputstvo.pokojnici') }}"><span uk-icon="plus"></span> Pokojnici</a></li>
        <li><a href="{{ path_for('uputstvo.transakcije') }}"><span uk-icon="credit-card"></span> Transakcije</a></li>
        <li><a href="{{ path_for('uputstvo.admin') }}"><span uk-icon="database"></span> Administracija</a></li>
        <li class="uk-nav-divider"></li>
        <li><a href="#pregled">Pregled svih kartona</a></li>
        <li><a href="#pretraga">Pretraživanje kartona</a></li>
        <li><a href="#dodavanje">Dodavanje novog kartona</a></li>
        <li class="uk-nav-divider"></li>
