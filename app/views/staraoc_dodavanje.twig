{% extends "templates/app.twig" %}

{% block naslov %}
<h1>Dodavanje novog staraoca</h1>
<hr>
<form action="{{ path_for('staraoci.dodavanje.post') }}" method="POST" class="uk-form-stacked" uk-grid>
	{{ csrf|raw }}
	<input type="hidden" name="karton_id" step="1" id="karton_id" value="{{ karton_id }}" required>
	<div class="uk-width-1-6">
		<label for="redni_broj" class="uk-form-label">Redni broj</label>
		<div class="uk-form-controls">
			<input type="number" name="redni_broj" step="1" id="redni_broj" value="{{ old.redni_broj ? : '' }}"
				class="uk-input{{ errors.redni_broj[0] ? ' uk-form-danger': ''}}" autocomplete="off" min="1" autofocus required>
		</div>
		<small class=" uk-text-danger">{{ errors.redni_broj[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<label for="prezime" class="uk-form-label">Prezime / Naziv</label>
		<div class="uk-form-controls">
			<input type="text" name="prezime" id="prezime" class="uk-input{{ errors.prezime[0] ? ' uk-form-danger': ''}}"
				value="{{ old.prezime ? : '' }}" autocomplete="off" required>
		</div>
		<small class="uk-text-danger">{{ errors.prezime[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<label for="ime" class="uk-form-label">Ime</label>
		<div class="uk-form-controls">
			<input type="text" name="ime" id="ime" class="uk-input{{ errors.ime[0] ? ' uk-form-danger': ''}}" value="{{ old.ime ? : '' }}"
				autocomplete="off" required>
		</div>
		<small class="uk-text-danger">{{ errors.ime[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<label for="srednje_ime" class="uk-form-label">Srednje ime</label>
		<div class="uk-form-controls">
			<input type="text" name="srednje_ime" id="srednje_ime" class="uk-input{{ errors.srednje_ime[0] ? ' uk-form-danger': ''}}"
				value="{{ old.srednje_ime ? : '' }}" autocomplete="off">
		</div>
		<small class="uk-text-danger">{{ errors.srednje_ime[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<label for="jmbg" class="uk-form-label">JMBG</label>
		<div class="uk-form-controls">
			<input type="text" name="jmbg" id="jmbg" class="uk-input{{ errors.jmbg[0] ? ' uk-form-danger': ''}}"
				value="{{ old.jmbg ? : '' }}" autocomplete="off" maxlength="13" required>
		</div>
		<small class="uk-text-danger">{{ errors.jmbg[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<label for="telefon" class="uk-form-label">Telefon</label>
		<div class="uk-form-controls">
			<input type="text" name="telefon" id="telefon" class="uk-input{{ errors.telefon[0] ? ' uk-form-danger': ''}}"
				value="{{ old.telefon ? : '' }}" autocomplete="off">
		</div>
		<small class="uk-text-danger">{{ errors.telefon[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<label for="ptt" class="uk-form-label">Poštanski broj</label>
		<div class="uk-form-controls">
			<input type="number" name="ptt" step="1" id="ptt" value="{{ old.ptt ? : '34000' }}"
				class="uk-input{{ errors.ptt[0] ? ' uk-form-danger': ''}}" autocomplete="off" min="1">
		</div>
		<small class=" uk-text-danger">{{ errors.ptt[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<label for="mesto" class="uk-form-label">Mesto</label>
		<div class="uk-form-controls">
			<input type="text" name="mesto" id="mesto" class="uk-input{{ errors.mesto[0] ? ' uk-form-danger': ''}}"
				value="{{ old.mesto ? : 'Kragujevac' }}" autocomplete="off">
		</div>
		<small class="uk-text-danger">{{ errors.mesto[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-2">
		<label for="ulica" class="uk-form-label">Ulica</label>
		<div class="uk-form-controls">
			<input type="text" name="ulica" id="ulica" class="uk-input{{ errors.ulica[0] ? ' uk-form-danger': ''}}"
				value="{{ old.ulica ? : '' }}" autocomplete="off">
		</div>
		<small class="uk-text-danger">{{ errors.ulica[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<label for="broj" class="uk-form-label">Broj</label>
		<div class="uk-form-controls">
			<input type="text" name="broj" id="broj" class="uk-input{{ errors.broj[0] ? ' uk-form-danger': ''}}"
				value="{{ old.broj ? : '' }}" autocomplete="off">
		</div>
		<small class="uk-text-danger">{{ errors.broj[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-6">
		<div class="uk-form-controls uk-margin-top">
			<label><input class="uk-checkbox{{ errors.aktivan[0] ? ' uk-form-danger': ''}}" type="checkbox" name="aktivan"
					{{ old.aktivan ? ' checked' : '' }}> Aktivan</label>
		</div>
	</div>
	<div class="uk-width-4-5">
		<div class="uk-form-controls uk-margin-top">
			<label><input class="uk-checkbox{{ errors.prenos[0] ? ' uk-form-danger': ''}}" type="checkbox" name="prenos"
					{{ old.prenos ? ' checked' : '' }}> Prenos</label>
		</div>
	</div>
	<div class="uk-button-group uk-width-1-6">
		<button class="uk-button uk-button-primary uk-width-1-2">Snimi</button>
		<a href="{{ path_for('kartoni.pregled',{id:karton_id}) }}" class="uk-button uk-button-secondary uk-width-1-2">Otkaži</a>
	</div>
</form>
{% endblock naslov %}