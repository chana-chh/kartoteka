{% extends "templates/app.twig" %}

{% block naslov %}
<h1>Zaduzivanje taksi</h1>
<hr>
<ul class="uk-text-warning">
	<li>Proveri iznos takse</li>
	<li>Proveri godinu zaduzenja</li>
	<li>Ova operacija moze potrajati izvesno vreme</li>
</ul>
<form action="{{ path_for('transakcije.zaduzivanje.takse.post') }}" method="POST" class="uk-form-stacked" uk-grid>
	{{ csrf|raw }}
	<div class="uk-width-1-4">
		<label for="iznos" class="uk-form-label">Iznos zaduzenja</label>
		<div class="uk-form-controls">
			<input type="number" name="iznos" id="iznos" class="uk-input{{ errors.iznos[0] ? ' uk-form-danger': ''}}"
				value="{{ taksa }}" min="0" step="0.01" autocomplete="off" required readonly>
		</div>
		<small class="uk-text-danger">{{ errors.iznos[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-4">
		<label for="godina" class="uk-form-label">Godina zaduzenja</label>
		<div class="uk-form-controls">
			<input type="number" name="godina" id="godina" value="{{ old.godina ? : 'now'|date('Y') }}" min="0" step="1"
				class="uk-input{{ errors.godina[0] ? ' uk-form-danger': ''}}" autocomplete="off" required>
		</div>
		<small class="uk-text-danger">{{ errors.godina[0] ? :'' }}</small>
	</div>
	<div class="uk-width-1-4 uk-flex uk-flex-bottom">
		<div class="uk-button-group uk-width-1-1">
			<button class="uk-button uk-button-primary uk-width-1-2">Zaduzi</button>
			<a href="{{ path_for('kartoni') }}" class="uk-button uk-button-secondary uk-width-1-2">Otka≈æi</a>
		</div>
	</div>
</form>
{% endblock naslov %}
