{% block skripta %}
	<script type="text/javascript">
		document.getElementById('ajax').addEventListener('click', loadText);
		function loadText(){
			var xhr = new XMLHttpRequest();
			xhr.open('POST', '{{ path_for('raspored.ajax') }}', true);
			xhr.onload = function(){
				if (this.status == 200){
					document.getElementById('poruka').innerHTML = JSON.parse(this.responseText).poruka;
					document.getElementById("csrf_name").value = JSON.parse(this.responseText).csrf_name;
					document.getElementById("csrf_value").value = JSON.parse(this.responseText).csrf_value;
				}
			}
			token = new FormData(document.querySelector("#forma"));
			xhr.send(token);
		}
	</script>
{% endblock skripta %}